{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "tsBuildInfoFile": ".next/.tsbuildinfo",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@/animations/*": ["./src/assets/animations/*"]
        },
        "types": ["@serwist/next/typings", "jest"],
        "verbatimModuleSyntax": true
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/app/api/assetLinks.js",
        "src/app/api/appleAppSiteAssociation.js",
        ".next/dev/types/**/*.ts"
    ],
    "exclude": ["node_modules", "src/app/sw.ts", ".next"]
}
